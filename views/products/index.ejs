
<h2 class="page-header">Search Product</h2>
<form action="/products" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Title</label>
            <input type="text" name="title" value="<%= searchOptions.title  %>">
        </div>
    </div>
    <div class="form-row">
        <div class="form-item">
            <label>Created After</label>
            <input type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter %>">
        </div>
        <div class="form-item">
            <label>Created Before</label>
            <input type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore %>">
        </div>
    </div>
    <div class="form-row form-row-end btn-row">
        <button type="submit" class="btn btn-primary">Search</button>
    </div> 
</form>
<div>
    <% products.forEach(product => { %>
            <a href="/products/<%= product.id %>">
                <img height="150" width="100" src="<%= product.imagePath %>" >
            </a>
    <% }) %> 
</div>