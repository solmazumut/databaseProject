<h2 class="page-header" ><%= product.title %></h2>
<img width="100" height="150" src="<%= product.imagePath %>">
<div>User: <%= product.user.name %></div>
<div>Publish Date: <%= product.createdAt.toDateString() %></div>
<div>Barty Value: <%= product.bartyValue %></div>
<div>Description: <%= product.description %></div>

<a href="/products/<%= product.id %>/edit" class="btn btn-primary">Edit</a>
<%- include('../partials/deleteForm', { url: `/products/${product.id}` }) %>
<a href="/users/<%= product.user.id %>" class="btn btn-primary">View User</a>